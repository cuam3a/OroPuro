
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Oro Puro | Inicio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/panelcss")
</head>
<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("paginaConst", "Home")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>O</b>P</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>ORO</b>PURO</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">



                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/img/userProfile.png" class="user-image" alt="User Image">
                                @if (Session["nombre"] != null)
                                {
                                    @Session["nombre"].ToString()
                                }
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Salir", "Usuarios")">
                                        <i class="fa fa-sign-out"></i> <span>Salir</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        @if (Session["tipo"] != null && Session["tipo"].ToString() == "Administrador")
                        {
                            <li>
                                <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/img/userProfile.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>
                            @if (Session["nombre"] != null)
                            {
                                @Session["nombre"].ToString()
                            }
                        </p>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">Menu Prinicpal</li>
                    <li class="active treeview">
                        <a href="@Url.Action("DashVentas", "Dashboards")">
                            <i class="fa fa-dashboard"></i> <span>Dashboard Ventas</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Oro Puro &copy; 2017 Hermosillo Sonora</strong> Derechos Reservados
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <div class="tab-pane">
                <ul class="control-sidebar-menu" style="padding-left:8%">
                    <li class="">
                        <a href="@Url.Action("ListaUsuarios", "Usuarios", null)">
                            <i class="menu-icon fa fa-users bg-aqua"></i>
                            <div class="menu-info">
                                <h4 class="control-sidebar-subheading">Usuarios</h4>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/paneljs")
    @RenderSection("scripts", required: false)
</body>
</html>